@inherits LayoutComponentBase
<RadzenComponents/>

<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body';">
    <RadzenHeader>
        <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0">
            <RadzenColumn Size="5">
            </RadzenColumn>
            <RadzenColumn Size="7">
                <RadzenStack AlignItems="AlignItems.End" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End">
                    <RadzenMenu Style="width: 552px; height: 50px">
                        <RadzenMenuItem Text="General" Icon="home" Path=""></RadzenMenuItem>
                        <RadzenMenuItem Text="Facultades" Path="faculties" Icon="account_circle"></RadzenMenuItem>
                        <RadzenMenuItem Text="Carreras" Path="degrees" Icon="line_weight"></RadzenMenuItem>
                        <RadzenMenuItem Text="Cum-Fum" Path="cum-fum" Icon="apartment"></RadzenMenuItem>
                        <RadzenMenuItem Text="Dialog" Path="dialog" Icon="perm_media"></RadzenMenuItem>
                        <RadzenMenuItem Text="Notification" Path="notification" Icon="announcement"></RadzenMenuItem>
                    </RadzenMenu>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenBody class="rz-background-color-secondary-light">
        <RadzenRow class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" Style="max-width: 1440px;">
            <RadzenColumn Size="12">
                @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>
</RadzenLayout>