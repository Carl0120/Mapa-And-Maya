@inherits LayoutComponentBase
<RadzenComponents/>

<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body';">
    <RadzenHeader>
        <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0">
            <RadzenColumn Size="5">
            </RadzenColumn>
            <RadzenColumn Size="7">
                <RadzenStack AlignItems="AlignItems.End" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End">
                    <RadzenMenu Style="width: 552px; height: 50px">
                    <RadzenMenuItem Text="Rais" Icon="perm_media" Path=""></RadzenMenuItem>
                        <RadzenMenuItem Text="Home" Icon="home" Path="mapa"></RadzenMenuItem>
                        <RadzenMenuItem Text="Cum-Fum" Path="mapa/cum-fum" Icon="apartment"></RadzenMenuItem>
                         <RadzenMenuItem Text="Cursos" Path="/mapa/cum-fum/courses" Icon="course"></RadzenMenuItem>
                        </RadzenMenu>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenBody class="rz-background-color-base-400">
        <RadzenRow class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" Style="max-width: 1440px;">
            <RadzenColumn Size="12">
                @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>
</RadzenLayout>